<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrenteventActivity"
    android:orientation="vertical">

    

    <LinearLayout
        android:id="@+id/current_event_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/club_current_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white2"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:logo="@drawable/side_menu"
            app:title="CurrentEvent"
            app:titleMargin="10dp"
            app:titleMarginStart="30dp"
            app:titleTextColor="@color/black"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Current Event"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/club_current_event" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_light"
                android:padding="15dp">

                <TextView
                    android:id="@+id/current_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EventName:- PIE DAY"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/current_event_coordinator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coordinator Name: - VISHNU "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/current_event_name"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/current_event_dateofevent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Event: - 1 Jan 2023 "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/current_event_coordinator_name"
                    android:layout_marginTop="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_current_event"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:text="Detail"
                    android:textStyle="bold"
                    android:layout_marginLeft="70dp"

                    style="@android:style/Widget.Button"
                    android:textSize="20dp"
                    android:textColor="#00F778"
                    android:layout_below="@+id/current_event_dateofevent"
                    />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/current_ment_ham"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="68dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/current_event_coordinator_name"

                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:logo="@drawable/menu"
                    app:title="IEEE CLUB"
                    app:titleMargin="40dp"
                    tools:ignore="MissingConstraints" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
